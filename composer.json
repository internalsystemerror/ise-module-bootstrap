{
    "name": "ise/ise-module-bootstrap",
    "description": "Twitter Bootstrap module for Zend Framework used by Internalsystemerror Limited",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "https://github.com/internalsystemerror/ise-module-bootstrap",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "classmap-authoritative": false,
        "discard-changes": true,
        "optimize-autoloader": true,
        "prepend-autoloader": true,
        "process-timeout": 5000,
        "sort-packages": true
    },
    "conflict": {
        "nervo/yuicompressor": "2.4.8"
    },
    "require": {
        "php": "^7.1",
        "rwoverdijk/assetmanager": "^1.7.3",
        "zendframework/zend-form": "^2.12.0",
        "zendframework/zend-navigation": "^2.9.0",
        "zendframework/zend-view": "^2.10.0"
    },
    "require-dev": {
        "ise/php-metapackage-development": "^2.0.1",
        "nervo/yuicompressor": "^2.4.7",
        "zendframework/zend-json": "^3.1.0",
        "zendframework/zend-i18n": "^2.9.0",
        "zendframework/zend-mvc-plugin-flashmessenger": "^1.0.0"
    },
    "autoload": {
        "psr-4": {
            "Ise\\Bootstrap\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IseTest\\Bootstrap\\": "test/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0.x-dev",
            "dev-develop": "1.1.x-dev"
        }
    },
    "scripts": {
        "analyse": "phpstan analyse -l 4 config src",
        "cs-check": [
            "phpcs",
            "phpmd config,src,test html --reportfile build/logs/phpmd.html --suffixes php,phtml phpmd.xml.dist",
            "phpcpd . --exclude=assets --exclude=build --exclude=vendor "
        ],
        "cs-fix": "phpcbf",
        "test": "phpunit"
    }
}
